<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/root"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="5dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title_heading"
            android:layout_width="50dp"
            android:layout_height="29dp"
            android:textStyle="bold"
            android:layout_above="@+id/desc"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:text="Title:" />

        <TextView
            android:id="@+id/title"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/title_heading"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true" />

        <TextView
            android:id="@+id/desc_heading"
            android:layout_width="54dp"
            android:layout_height="34dp"
            android:textStyle="bold"
            android:layout_above="@+id/price_heading"
            android:layout_alignStart="@+id/title_heading"
            android:singleLine="true"
            android:text="Description:" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="238dp"
            android:layout_height="35dp"
            android:layout_alignBottom="@+id/desc_heading"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/price_heading"
            android:layout_width="59dp"
            android:layout_height="31dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/title_heading"
            android:layout_marginBottom="15dp"
            android:text="Price:" />

        <TextView
            android:id="@+id/price"
            android:layout_width="236dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/price_heading"
            android:layout_marginStart="118dp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>